@import 'nib'
.footer
    width: 640px
    height: 20px
    font-family: 'Fjord One', serif
    font-size: 10pt
    border-top-left-radius: 15px
    border-top-right-radius: 15px
    display:inline-block
    bottom: 30px    
    padding-top: 3px
    padding-left: 10px

