.footer a
      margin-left: 10px
      margin-right: 15px
      color: #c8c8e8
      text-decoration: none

      &:visited
        color: #000

      &:hover
        color: #fb3

      &:last-child
        margin-right: 0

.footer span
      color: #8888a8
      text-decoration: none
      padding-left: 0px
      margin-left: 0px
      padding-right: 10px
