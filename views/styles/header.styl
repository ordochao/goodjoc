@import 'nib'

#logo-content
  position:fixed
  left:25px
  top: 5px
  width: 100px

#img-logo
  width: 25px
  height: 25px
  

#header-links
  width: 100%
  float: right
  text-align: right
  display:inline

.header
  width: 100%
  height: 36px
  margin: 0 auto
  padding: 8px
  padding-right: 40px
  background-color: #d8d8f8
  font-family: 'Fjord One', serif
  font-size: 12pt
  border-bottom-left-radius: 15px

  &-link
    margin-left: 10px
    margin-right: 15px
    color: #555
    text-decoration: none
    text-shadow: 1px 1px #eee

    &:visited
      color: #111

    &:hover
      text-shadow: 2px 1px #da0

    &:last-child
      margin-right: 0
