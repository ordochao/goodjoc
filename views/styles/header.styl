@import 'nib'


#language-selector
  position:fixed
  left:80px
  top: 6px
  width: 120px

.selected
  border:1px dashed #8888a8;

.language-selector-link
  margin-left: 0px
  margin-right: 2px
  padding-left: 3px
  padding-right: 3px
  padding-top: 1px
  padding-bottom: 1px
  color: #555
  font-size: 10pt
  text-decoration: none
  text-shadow: 1px 1px #eee

.language-selector-link:visited
  color: #111

.language-selector-link:hover
  text-shadow: 2px 1px #da0

.language-selector-link:last-child
  margin-right: 0

#logo-content
  position:fixed
  left:25px
  top: 0px
  width: 100px

#img-logo
  width: 34px
  height: 34px
  

#header-links
  width: 100%
  float: right
  text-align: right
  display:inline

.header
  width: 100%
  height: 36px
  margin: 0 auto
  padding: 8px
  padding-right: 40px
  background-color: #d8d8f8
  font-family: 'Fjord One', serif
  font-size: 12pt
  border-bottom-left-radius: 15px

  &-link
    margin-left: 10px
    margin-right: 15px
    color: #555
    text-decoration: none
    text-shadow: 1px 1px #eee

    &:visited
      color: #111

    &:hover
      text-shadow: 2px 1px #da0

    &:last-child
      margin-right: 0
